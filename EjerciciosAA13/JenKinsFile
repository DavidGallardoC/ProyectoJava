import java.time.LocalDate
pipeline {
    agent any
    stages{
        
        stage('mostrarFecha') {
            steps {
                script{
                    def fecha = LocalDate.now() 
                    println("Hola mundo! Hoy es " + fecha + " y el dia de la semana corresponde a " + fecha.getDayOfWeek())
                    println ("Este curso me hizo programar mas de lo que me hubiese gustado.")
                }
            }
        }
            
    }
}
