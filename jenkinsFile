import java.text.SimpleDateFormat;
import java.text.DateFormat;
import java.util.Date;

Date date = new Date();
pipeline {
    agent any

    stages {
        stage('chiste_Informaticos') {
            steps {
                script{
                  if(date.getDay() == 4){
                    println "Chiste de informático"
                  }                  
                }
            }
        }  
      
      stage('chiste_HumorNegro') {
            steps {
                script{
                  if(date.getDay() == 5){
                    println "Chiste de humor negro"
                  }                  
                }
            }
        }
      
      stage('chiste_Futbol') {
            steps {
                script{
                  if(date.getDay() == 1){
                    println "Chiste de fútbol"
                  }                  
                }
            }
        }
      
      stage('chiste_Politica') {
            steps {
                script{
                  if(date.getDay() == 2){
                    println "Chiste de politica"
                  }                  
                }
            }
        }
      
      stage('chiste_Medicos') {
            steps {
                script{
                  if(date.getDay() == 3){
                    println "Chiste de médicos"
                  }                  
                }
            }
        }
    }
}
