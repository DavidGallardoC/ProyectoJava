import java.util.Date;
import java.text.DateFormat;
import java.text.SimpleDateFormat;


Date date = new Date();
DateFormat dateFormat=new SimpleDateFormat("dd/MM/yyyy");
def fecha = dateFormat.format(date)
pipeline {
    agent any

    stages {
        stage('chiste_informaticos') {
            steps {
                script{
                  if(date.getDay() == 4){
                        println "Hoy es " + fecha
                        println "¿Que es un terapeuta? – 1024 Gigapeutas."
                  }                  
                }
            }
        }  
      
      stage('chiste_humornegro') {
            steps {
                script{
                  if(date.getDay() == 5){
                        println "Hoy es " + fecha
                        println "Que son 4 negros en un coche rojo? Un KitKat"
                  }                  
                }
            }
        }
      
      stage('chiste_futbol') {
            steps {
                script{
                  if(date.getDay() == 1){
                        println "Hoy es " + fecha
                        println "Por qué Messi no bautiza a su hijo? -Para no hacerse Cristiano."
                  }                  
                }
            }
        }
      
      stage('chiste_politica') {
            steps {
                script{
                  if(date.getDay() == 2){
                        println "Hoy es " + fecha  
                        println "¿Por qué los políticos son una prueba de la reencarnación? -Porque nadie puede hacerse tan retorcido en una sola vida"
                  }                  
                }
            }
        }
      
      stage('chiste_medicos') {
            steps {
                script{
                  if(date.getDay() == 3){
                        println "Hoy es " + fecha
                        println  "Doctor, doctor, ¿qué tal ha salido la operación, Pero qué doctor ni que ocho cuartos! ¡Mire Ud. yo soy San Pedro!"
                  }                  
                }
            }
        }
    }
}
